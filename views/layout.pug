html
    head
        title MicroServicePosts
        link(href="/favicon.ico" rel="icon" type="image/x-icon")
        block headContent
    body
        main
            header(class='container')
                h1(class='title')
                    a(href='/pug') Posts
                ul(class='listFunc')
                    if user > 0
                        li
                            a(href=`/pug/myPosts`) My posts
                        li
                            a(href='/auth/logout') logout
                        li
                            a(href='/auth/admin') Admin
                    else
                        li
                            a(href='/auth/login') login
                        li
                            a(href='/auth/register') register
            div.container
                block content
